<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>

    <!-- Class Driver Path -->
    <classPathEntry location="D:/mysql-connector-java-5.1.38.jar"/>

    <context id="context" targetRuntime="MyBatis3">

        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:MySQL://localhost:3306/website"
                        userId="root" password="root"/>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.gyex.website.entity" targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
            <property name="trimStrings" value="true"/>
            <property name="rootClass" value="com.gyex.website.entity.BaseEntity"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>

        <javaClientGenerator targetPackage="com.gyex.website.mapper" targetProject="src/main/java" type="XMLMAPPER">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!--用户表-->
        <table tableName="web_user" domainObjectName="User" enableCountByExample="false" enableSelectByExample="false"
               enableDeleteByExample="false" enableUpdateByExample="false">
        </table>

        <!--角色表-->
        <table tableName="web_role" domainObjectName="Role" enableCountByExample="false" enableSelectByExample="false"
               enableDeleteByExample="false" enableUpdateByExample="false">
        </table>

        <!--用户表-->
        <table tableName="web_group" domainObjectName="Group" enableCountByExample="false" enableSelectByExample="false"
               enableDeleteByExample="false" enableUpdateByExample="false">
        </table>

        <table tableName="web_content" domainObjectName="Content" enableCountByExample="false"
               enableSelectByExample="false" enableDeleteByExample="false" enableUpdateByExample="false">
        </table>

        <table tableName="web_function" domainObjectName="Function" enableCountByExample="false"
               enableSelectByExample="false" enableDeleteByExample="false" enableUpdateByExample="false">
        </table>

        <table tableName="web_group_role" domainObjectName="GroupRole" enableCountByExample="false"
               enableSelectByExample="false" enableDeleteByExample="false" enableUpdateByExample="false">
        </table>

        <table tableName="web_menu" domainObjectName="Menu" enableCountByExample="false"
               enableSelectByExample="false" enableDeleteByExample="false" enableUpdateByExample="false">
        </table>

        <table tableName="web_product" domainObjectName="Product" enableCountByExample="false"
               enableSelectByExample="false" enableDeleteByExample="false" enableUpdateByExample="false">
        </table>

        <table tableName="web_resource" domainObjectName="Resource" enableCountByExample="false"
               enableSelectByExample="false" enableDeleteByExample="false" enableUpdateByExample="false">
        </table>

        <table tableName="web_role_menu" domainObjectName="RoleMenu" enableCountByExample="false"
               enableSelectByExample="false" enableDeleteByExample="false" enableUpdateByExample="false">
        </table>

        <table tableName="web_role_resource_func" domainObjectName="RoleResourceFunc" enableCountByExample="false"
               enableSelectByExample="false" enableDeleteByExample="false" enableUpdateByExample="false">
        </table>

        <table tableName="web_user_group" domainObjectName="UserGroup" enableCountByExample="false"
               enableSelectByExample="false" enableDeleteByExample="false" enableUpdateByExample="false">
        </table>

    </context>
</generatorConfiguration>